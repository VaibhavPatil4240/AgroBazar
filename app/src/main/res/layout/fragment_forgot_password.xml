<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forgotPassword_fragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="276dp"
        android:layout_height="72dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/logofull"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/phnoText"
        android:layout_width="195dp"
        android:layout_height="67dp"
        android:layout_marginTop="84dp"
        android:hint="Phone number"
        android:inputType="phone"
        android:textAlignment="center"
        android:translationZ="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/otpText"
        android:layout_width="195dp"
        android:layout_height="67dp"
        android:hint="OTP"
        android:inputType="phone"
        android:textAlignment="center"
        android:translationZ="2dp"
        app:layout_constraintBottom_toTopOf="@+id/getOTP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.538" />

    <EditText
        android:id="@+id/newPass"
        android:layout_width="195dp"
        android:layout_height="67dp"
        android:layout_marginTop="84dp"
        android:hint="New Password"
        android:inputType="text"
        android:textAlignment="center"
        android:translationZ="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/newPass2"
        android:layout_width="195dp"
        android:layout_height="67dp"
        android:layout_marginTop="44dp"
        android:hint="Confirm Password"
        android:inputType="text"
        android:textAlignment="center"
        android:translationZ="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phnoText" />

    <Button
        android:id="@+id/getOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:background="@color/orange"
        android:text="Verify"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phnoText" />

    <Button
        android:id="@+id/Chnagepassb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Password"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPass2"
        app:layout_constraintVertical_bias="0.165"
        android:background="@color/orange"/>
</androidx.constraintlayout.widget.ConstraintLayout>